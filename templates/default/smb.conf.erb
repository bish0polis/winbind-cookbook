
[global]

   workgroup = <%= node[:realm][:netbios] %>
   password server = <%= node[:realm][:servers].join(' ') %>
   realm = <%= node[:realm][:realm_name].upcase %>

   # template the rest ... later.
   security = ads
   idmap config * : range = 16777216-33554431
   passdb backend = tdbsam

